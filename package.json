  "version": "1.0.0",
  "description": "A modern, interactive portfolio website with mini-games and useful tools",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
